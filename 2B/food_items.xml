<xsl:stylesheet version="1.0"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
	<xsl:template match="/">
		<html>
			<body>
				<h2>Nutritional Values</h2>
				<table border="1">
					<tr bgcolor="#9acd32"       >
						<th>Food_Item</th>
						<th>Carbs</th>
						<th>Fiber</th>
						<th>Fat</th>
						<th>Energy</th>
					</tr>
					<xsl:for-each select="Food/item">
						<tr>
							<td>
								<xsl:value-of select="Food_Item"/>
							</td>
							<td>
								<xsl:value-of select="Carbs"/>
							</td>
							<td>
								<xsl:value-of select="Fiber"/>
							</td>
							<td>
								<xsl:value-of select="Fat"/>
							</td>
							<td>
								<xsl:value-of select="Energy"/>
							</td>
						</tr>
					</xsl:for-each>
				</table>
			</body>
		</html>
	</xsl:template>
</xsl:stylesheet>